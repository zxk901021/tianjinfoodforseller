<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/order_list_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:textSize="24dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/order_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_order"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <View
        android:id="@+id/order_list_separate_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separate_line"
        android:layout_below="@+id/order_list_title"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/order_list_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/order_list_separate_line">

        <TextView
            android:id="@+id/order_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/order_unhandle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待处理"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/order_handle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已处理"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/order_package"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="打包中"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/order_delivery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="配送中"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/order_arrived"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已到货"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>

    </LinearLayout>

</RelativeLayout>
