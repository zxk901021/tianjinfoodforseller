<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_list_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号：111111"/>

    <View
        android:id="@+id/order_list_item_separate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/assis_text"
        android:layout_below="@+id/order_list_number"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_goods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_list_item_separate">

    </android.support.v7.widget.RecyclerView>
    <View
        android:id="@+id/order_list_item_separate_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/assis_text"
        android:layout_below="@+id/order_goods_list"/>
    <TextView
        android:id="@+id/order_total_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/order_list_item_separate_2"/>

    <TextView
        android:id="@+id/order_list_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow_2"
        android:text="待收货"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>